    "start": "x0 dev docs/Demo.js",
    "test": "nyc ava"
  },
  "repository": "c8r/kit",
  "keywords": [
    "styleguide",
    "design",
    "system",
    "react",
    "compositor",
    "lab",
    "kit"
  ],
  "license": "MIT",
  "dependencies": {
    "@compositor/webfont": "^1.0.0-1",
    "chroma-js": "^1.3.6",
    "gray-matter": "^4.0.1",
    "nano-style": "^1.0.0",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-live": "^1.10.1",
    "styled-components": "^3.2.5",
    "styled-system": "^2.2.1"
  },
  "devDependencies": {
    "@compositor/x0": "^4.0.1",
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-register": "^6.26.0",
    "nyc": "^11.6.0",
    "prettier": "^1.12.1"
  },
  "ava": {
    "require": [
      "babel-register"
