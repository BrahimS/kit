{
  "name": "@compositor/kit",
  "description": "Components for development environments, style guides, and demos",
  "author": "John Otander",
  "version": "1.0.0",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "babel src -d dist",
    "clean": "rm -rf dist",
    "format": "prettier --no-semi --single-quote --write '{docs,src}/**/*.js'",
