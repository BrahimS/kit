{
  "name": "@compositor/kit-cli",
  "version": "1.0.19",
  "description": "Compositor Kit CLI",
  "license": "MIT",
  "repository": "c8r/kit-cli",
  "author": "Compositor",
  "bin": {
    "kit": "cli.js"
  },
  "scripts": {
    "start": "./cli.js",
    "format": "prettier --write *.js '{src,lib}/**/*.js'",
    "test": "ava -v"
  },
  "files": [
    "cli.js",
    "ui.js",
    "lib",
    "src"
  ],
  "dependencies": {
    "@compositor/kit-dev": "^1.0.19",
    "execa": "^0.10.0",
    "import-jsx": "^1.3.0",
    "ink": "^0.2.1",
    "ink-big-text": "^0.2.0",
    "ink-box": "^0.1.0",
    "ink-select-input": "^1.1.0",
    "ink-spinner": "^1.0.0",
    "ink-text-input": "^1.1.1",
    "meow": "^5.0.0",
    "pkg-conf": "^2.1.0",
    "prop-types": "^15.5.10",
    "update-notifier": "^2.5.0"
  },
  "devDependencies": {
    "ava": "^0.20.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "eslint-config-xo-react": "^0.13.0",
    "eslint-plugin-react": "^7.1.0",
    "prettier": "^1.12.1",
    "xo": "^0.18.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "babel": {
      "presets": [
        "@ava/stage-4"
      ],
      "plugins": [
        [
          "transform-react-jsx",
          {
            "pragma": "h",
            "useBuiltIns": true,
            "pragmaFrag": "h.Fragment"
          }
        ]
      ]
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
